<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        tools:context=".api.ui.activities.RouteActivity">

    <Button
            android:text="Consultar Rota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/nameRoute"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageRoute"
            android:maxHeight="416dp" android:minHeight="416dp" android:maxWidth="153dp"
            android:minWidth="153dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/nameRoute"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameRoute"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:text="Belem"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/classificationRoute"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="4.7"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toEndOf="@+id/imageRoute"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingNumberRoute"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="100 avaliaÃ§oes" app:layout_constraintStart_toEndOf="@+id/classificationRoute"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/typeRoute"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingNumberRoute"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/imageRoute"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionRoute"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textAlignment="viewStart"
            android:text="dsafsadf" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageRoute"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dificultyRoute"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/descriptionRoute"
            android:text="dsf" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/durationRoute"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dificultyRoute" android:text="gfd"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cityRoute"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/typeRoute"
            app:layout_constraintStart_toEndOf="@+id/imageRoute" android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>