<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".api.ui.activities.MainActivity"
        android:orientation="vertical"
        android:id="@+id/relativeLayout"
        android:background="@android:color/white">


    <android.support.constraint.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="540dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/schedule"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/searchView">

        <include
                layout="@layout/calender_component"
                android:id="@+id/content"
                android:visibility="gone"
                android:layout_height="450dp"
                android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
        />


        <ListView
                android:id="@+id/listView"
                android:background="@android:color/white"
                android:layout_height="450dp"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" tools:layout_conversion_absoluteHeight="535dp"
                tools:layout_conversion_absoluteWidth="387dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>
    </android.support.constraint.ConstraintLayout>
    <ImageButton
            android:layout_width="95dp"
            android:layout_height="80dp"
            android:id="@+id/explore"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:background="@null"
            android:src="@drawable/exploregreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/favorite"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"/>


    <ImageButton
            android:layout_width="95dp"
            android:layout_height="80dp"
            android:id="@+id/favorite"
            android:background="@null"
            android:src="@drawable/heartblack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/explore"
            app:layout_constraintEnd_toStartOf="@+id/schedule" android:layout_marginBottom="8dp"/>
    <ImageButton
            app:layout_constraintStart_toEndOf="@+id/favorite"
            app:layout_constraintEnd_toStartOf="@+id/user"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="95dp"
            android:layout_height="80dp"
            android:id="@+id/schedule"
            android:background="@null"
            android:src="@drawable/schedulerblack" android:layout_marginBottom="8dp"/>


    <ImageButton
            android:layout_width="95dp"
            android:layout_height="80dp"
            android:id="@+id/user"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:src="@drawable/userblack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/schedule" android:layout_marginBottom="8dp"/>

    <ImageButton
            android:layout_width="59dp"
            android:layout_height="46dp"
            android:id="@+id/tab" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />
    <ImageButton
            android:layout_width="59dp"
            android:layout_height="46dp"
            android:id="@+id/map"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <SearchView
            android:id="@+id/searchView" android:visibility="visible"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tab"
            app:layout_constraintEnd_toStartOf="@+id/map"/>

</android.support.constraint.ConstraintLayout>