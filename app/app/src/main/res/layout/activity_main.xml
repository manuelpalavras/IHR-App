<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".api.ui.MainActivity"
        android:orientation="vertical"
        android:id="@+id/relativeLayout"
        android:background="@android:color/holo_green_dark">

    <ListView
            android:id="@+id/routeList" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/white"
            android:layout_height="0dp" android:layout_width="387dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/favorite"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/searchView"/>
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="88dp"
            android:id="@+id/explore"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/favorite"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="-1dp"/>
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="88dp"
            android:id="@+id/favorite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/explore" app:layout_constraintEnd_toStartOf="@+id/schedule"
    />
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="88dp"
            android:id="@+id/schedule"
            app:layout_constraintStart_toEndOf="@+id/favorite"
            app:layout_constraintEnd_toStartOf="@+id/user"
            app:layout_constraintHorizontal_chainStyle="spread" app:layout_constraintBottom_toBottomOf="parent"
    />
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="88dp"
            android:id="@+id/user"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/schedule"/>
    <ImageButton
            android:layout_width="59dp"
            android:layout_height="46dp"
            android:id="@+id/tab" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />
    <ImageButton
            android:layout_width="59dp"
            android:layout_height="46dp"
            android:id="@+id/map"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <SearchView
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tab"
            android:id="@+id/searchView" android:visibility="visible"
            android:background="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/map" android:orientation="horizontal"
            android:layout_height="40dp"
    />

</android.support.constraint.ConstraintLayout>